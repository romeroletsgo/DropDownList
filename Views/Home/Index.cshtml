@model ViewLand;

<div class="container d-flex justify-content-center align-items-center" style="height: 100vh">
	<div class="row">
		<div class="col-md-offset-1 col-md-14">
			<div class="panel">

				<div class="d-flex flex-column align-items-center justify-content-center">
					<a class="pt-5" href="https://github.com/romeroletsgo" target="_blank">
						<svg xmlns="http://www.w3.org/2000/svg" width="30" height="30" fill="currentColor" class="bi bi-github" viewBox="0 0 16 16">
							<path d="M8 0C3.58 0 0 3.58 0 8c0 3.54 2.29 6.53 5.47 7.59.4.07.55-.17.55-.38 0-.19-.01-.82-.01-1.49-2.01.37-2.53-.49-2.69-.94-.09-.23-.48-.94-.82-1.13-.28-.15-.68-.52-.01-.53.63-.01 1.08.58 1.23.82.72 1.21 1.87.87 2.33.66.07-.52.28-.87.51-1.07-1.78-.2-3.64-.89-3.64-3.95 0-.87.31-1.59.82-2.15-.08-.2-.36-1.02.08-2.12 0 0 .67-.21 2.2.82.64-.18 1.32-.27 2-.27.68 0 1.36.09 2 .27 1.53-1.04 2.2-.82 2.2-.82.44 1.1.16 1.92.08 2.12.51.56.82 1.27.82 2.15 0 3.07-1.87 3.75-3.65 3.95.29.25.54.73.54 1.48 0 1.07-.01 1.93-.01 2.2 0 .21.15.46.55.38A8.012 8.012 0 0 0 16 8c0-4.42-3.58-8-8-8z" />
						</svg>
					</a>
				</div>

				<div class="panel-heading">
					<div class="row">
						<div class="col-sm-9 col-xs-12 text-right">
							<div class="btn_group">
								<form asp-action="Select" method="post">
									<div class="form-group">
										<label>Выберите страну:</label>
										<select class="form-select" name="Country" asp-items=@ViewBag.Lands class="form-control" onchange="this.form.submit();" asp-for="LandId"></select>
									</div>
								</form>
							</div>
						</div>
					</div>
				</div>
				<div class="panel-body table-responsive">

					<table class="table">
						<thead>
							<tr>
								<th>№</th>
								<th>@Html.DisplayNameFor(model => model.Cities)</th>
								<th>Население</th>
							</tr>
						</thead>
						<tbody>
							@{
								int i = 0;
							}
							@foreach (var city in Model.Cities)
							{
								i += 1;
								<tr>
									<td class="text-left">@i</td>
									<td class="text-left">@city.Name</td>
									<td class="text-right">@city.PopulationSize.ToString("N0")</td>
								</tr>
							}
						</tbody>
						<tfoot class="panel-footer">
							<tr>
								<td colspan="2" class="text-right">Населения всего:</td>
								<td class="text-right">
									@Model.Cities.Sum(x => x.PopulationSize).ToString("N0")
								</td>
							</tr>
						</tfoot>
					</table>
				</div>
				<div class="panel-footer">
					<div class="row d-flex flex-column justify-content-center">
						<div class="col col-sm-6 col-xs-6">Всего записей: @i</div>
						<div class="col-sm-6 col-xs-6">
							<div>Страницы</div>
							<ul class="pagination hidden-xs pull-right">
								<li><a href="#"><</a></li>
								<li class="active"><a href="#">1</a></li>
							</ul>
						</div>
					</div>
				</div>
			</div>
		</div>
	</div>
</div>